{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2022",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "mocha", "chai"],
    "paths": {
      "preactive/hooks": ["src/main/hooks.ts"],
      "preactive/ext": ["src/main/ext.ts"],
      "preactive/util": ["src/main/util.ts"],
      "preactive": ["./src/main/core.ts"]
    }
  },
  "files": [
    "src/main/core.ts",
    "src/main/ext.ts",
    "src/main/util.ts",
    "src/stories/demo.stories.tsx"
  ],
  "include": ["./src/**/*.ts*", "src/stories/demo.stories.tsx"],
  "exclude": ["node_modules"]
}
