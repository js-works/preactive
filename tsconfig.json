{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2022",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "lib": ["es2022", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {},
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "mocha", "chai"]
  },
  "files": ["src/main/index.ts", "src/stories/demo.stories.tsx"],
  "include": ["./src/**/*.ts*", "src/stories/demo.stories.tsx"],
  "exclude": ["node_modules"]
}
